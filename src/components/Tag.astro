---
export interface Props {
  tag: string;
  tagName: string;
  size?: "sm" | "lg";
}

const { tag, tagName, size = "sm" } = Astro.props;
---

<li
  class:list={[
    "group inline-block group-hover:cursor-pointer",
    size === "sm" ? "my-1" : "mx-1 my-3",
  ]}
>
  <a
    href={`/tags/${tag}/`}
    transition:name={tag}
    class:list={[
      'relative inline-block border border-foreground/25 rounded-full px-4 py-1 ring-foreground/80',
      'transition-[colors,box-shadow] ease-out hover:(border-accent/80 text-accent font-medium ring-0.2)',
      { "text-sm": size === "sm" },
    ]}
  >
    <span class="absolute inset-0 flex items-center justify-center whitespace-nowrap transition-font-weight">
      {tagName}
    </span>
    <span
      class="inline-block font-medium opacity-0"
      aria-hidden="true"
    >
      {tagName}
    </span>
  </a>
</li>
